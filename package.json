{
  "name": "@secpal/frontend",
  "version": "0.0.1",
  "description": "React/TypeScript frontend for SecPal platform",
  "private": true,
  "type": "module",
  "author": "SecPal",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/SecPal/frontend.git"
  },
  "homepage": "https://github.com/SecPal/frontend#readme",
  "bugs": {
    "url": "https://github.com/SecPal/frontend/issues"
  },
  "keywords": [
    "secpal",
    "frontend",
    "react",
    "typescript",
    "vite",
    "pwa",
    "progressive-web-app",
    "offline-first",
    "push-notifications",
    "share-target",
    "analytics"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "tsc && vite build --mode analyze",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --cache",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run --bail=1",
    "test:run:all": "vitest run --reporter=verbose",
    "test:related": "vitest related --run --bail=1",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ci": "cross-env CI=true playwright test",
    "test:e2e:staging": "cross-env PLAYWRIGHT_BASE_URL=https://app.secpal.dev playwright test",
    "format": "prettier --write --cache '**/*.{md,yml,yaml,json,ts,tsx,js,jsx}'",
    "format:check": "prettier --check '**/*.{md,yml,yaml,json,ts,tsx,js,jsx}'",
    "lingui:extract": "lingui extract",
    "lingui:compile": "lingui compile --namespace es",
    "sync": "cross-env-shell \"lingui extract --overwrite && lingui compile --namespace es\"",
    "sync:purge": "cross-env-shell \"lingui extract --overwrite --clean && lingui compile --namespace es\"",
    "lighthouse": "lhci autorun",
    "lighthouse:ci": "lhci autorun --config=lighthouserc.cjs"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@lingui/core": "^5.6.0",
    "@lingui/react": "^5.6.0",
    "clsx": "^2.1.1",
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^4.2.0",
    "idb": "^8.0.2",
    "motion": "^12.23.26",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-router-dom": "^7.10.1",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@fontsource/inter": "^5.2.8",
    "@lingui/cli": "^5.6.1",
    "@lingui/macro": "^5.6.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^25.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "babel-plugin-macros": "^3.1.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.18",
    "fake-indexeddb": "^6.2.5",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "jsdom-testing-mocks": "^1.16.0",
    "lighthouse": "^13.0.1",
    "playwright-lighthouse": "^4.0.0",
    "prettier": "^3.7.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.2.7",
    "vite-plugin-pwa": "^1.2.0",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^4.0.15",
    "workbox-window": "^7.4.0"
  },
  "optionalDependencies": {
    "@lhci/cli": "^0.15.1"
  },
  "overrides": {
    "tmp": "^0.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
